<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:background="#CAA33F"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLutemonImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLutemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lutemonin nimi"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtLutemonAtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lutemonin hyökkäys"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonDef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lutemonin puolustus"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lutemonin elämä"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonLvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lutemonin lvl"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgTrain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/train" />

        <ImageView
            android:id="@+id/imgBattle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTrain"
            app:srcCompat="@drawable/battle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>